{
  "language_servers": [
    "!eslint",
    "!prettier",
    "!typescript-language-server",
    "..."
  ],
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.organizeImports.biome": true,
    "source.fixAll": true
  },
  "formatter": {
    "external": {
      "command": "npx",
      "arguments": [
        "biome",
        "check",
        "--write",
        "--stdin-file-path",
        "{buffer_path}"
      ]
    }
  }
}
